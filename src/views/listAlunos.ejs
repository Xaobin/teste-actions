<div class="bg-white rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Lista de Alunos</h2>
        <form action="/search" method="GET" class="flex gap-2">
            <input 
                type="text" 
                name="query" 
                placeholder="Buscar por nome ou email..."
                class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                value="<%= locals.query || '' %>"
            >
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                Buscar
            </button>
        </form>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Média Final</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nível Acadêmico</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% alunos.forEach(aluno => { %>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= aluno._id %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= aluno.nome %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= aluno.email %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= aluno.mediaFinal %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= aluno.nivelAcademico %></td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                            <a href="/edit/<%= aluno._id %>" class="text-blue-600 hover:text-blue-900">Editar</a>
                            <a href="/delete/<%= aluno._id %>" class="text-red-600 hover:text-red-900">Excluir</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div> 